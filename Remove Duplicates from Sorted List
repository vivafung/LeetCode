class Solution {
public:
    ListNode *deleteDuplicates(ListNode *head) 

{
        if(head == NULL || head->next == NULL)
        {return head;}
        ListNode* ptr = head;
        ListNode* nptr = head->next;
        
        while(nptr != NULL)
        {
            if(nptr->val == ptr->val)
            {
                ptr->next = nptr->next;
                nptr = ptr->next;
            }
            else
            {
                ptr = nptr;
                nptr = ptr->next;
            }
        }
        
        return head;
    }
};
